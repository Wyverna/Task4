@model Task4.ViewModels.RegisterViewModel
<h2>Registration new user</h2>
@Html.ValidationSummary()
    <form method="post" asp-controller="Account" asp-action="Register">
        <div asp-validation-summary="ModelOnly"></div>
        <div class="form-group">
            <label class="col-form-label" asp-for="Email"></label><br />
            <input class="form-control" asp-for="Email" />
            <span asp-validation-for="Email"></span>
        </div>
        <div class="form-group">
            <label class="col-form-label" asp-for="UserName"></label><br />
            <input class="form-control" asp-for="UserName" />
            <span asp-validation-for="UserName"></span>
        </div>
        <div class="form-group">
            <label class="col-form-label" asp-for="Password"></label><br />
            <input class="form-control" asp-for="Password" />
            <span asp-validation-for="Password"></span>
        </div>
        <div class="form-group">
            <input class="form-control" type="submit" value="Sign up" />
        </div>
    </form>
    <button class="form-control" onclick='location.href="./Login"'>Return</button>